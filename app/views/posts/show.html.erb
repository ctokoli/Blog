<div class="container">
        <div class="posts ">
          <%if @post.nil?%>
            <h2>No Post yet</h2>
          <%end%>
            <div class="post-content bio">
                <div class="counts-section-top"> 
                     <h3>Post# <%= @post.id %>  <%= @user.name %></h3>
                    <div class="counts">
                        <p>Comments: <%= @post.comments_counter%></p>
                        <p>Likes: <%= @post.likes_counter%></p>
                   </div>
                </div>
               
                <p><%= @post.text%></p>
            </div>
            <div class="like">
              <%= button_to 'Like', user_post_likes_path(@user, @post), method: :post, remote: true %>
            </div>
            <div class="comments bio">
                        <h3>Comments</h3>
                        <% @post.comments.each do |comment| %>
                            <div class="comment">
                            <% user_id = comment.user_id %>
                            <strong><%= user = User.find(user_id).name %></strong>
                            <p><%= comment.text%></p>
                            </div>
                        <%end%>
            </div>
          <div class="link">
             <%= button_to 'Add a Comment', new_user_post_comment_path(@user, @post) %>
          </div>
        </div>
</div>